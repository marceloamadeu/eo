+package org.eolang.gray
+alias org.eolang.io.stdout
+alias org.eolang.gray.goto
+junit

[] > goto-jumps-backwards
  memory > i
  seq > @
    i.write 1
    goto
      [g]
        seq > @
          i.write (i.add 1)
          if.
            i.less 10
            g.backward
            TRUE
    stdout "Finished!"

[] > goto-jumps-forward
  [x] > div
    memory > r
    seq > @
      r.write 0
      goto
        [g]
          seq > @
            if.
              x.eq 0
              g.forward TRUE
              TRUE
            r.write (42.div x)
      r
  and. > @
    eq.
      div 7
      6
    eq.
      div 0
      0

[] > returns-from-method-body
  [a b] > max
    goto > @
      [g]
        seq > @
          if.
            a.greater b
            g.forward a
            TRUE
          b
  eq. > @
    max 7 42
    42
